# Configuração de Produção - Exemplo para Dados Reais
# Configure estas variáveis no painel da Netlify (Site settings > Environment variables)

# Supabase
VITE_SUPABASE_URL=https://<sua-instancia>.supabase.co
VITE_SUPABASE_ANON_KEY=<sua_anon_key_aqui>
SUPABASE_SERVICE_ROLE_KEY=<sua_service_role_key_aqui>

# N8N - URL do seu workflow que busca dados do Pipedrive
# Esta URL deve ser configurada com o endpoint real do seu N8N
N8N_PIPEDRIVE_WEBHOOK_URL=https://seu-n8n-server.com/webhook/pipedrive-deal

# URLs dos Webhooks (para referência)
VITE_PIPEDRIVE_WEBHOOK_URL=https://app.grupoggv.com/api/webhook/diag-ggv-register
VITE_N8N_WEBHOOK_URL=https://app.grupoggv.com/api/webhook/diag-ggv-register

# Configurações do domínio
VITE_APP_DOMAIN=app.grupoggv.com
NODE_ENV=production
 
# Feature flags
# true = mostra placeholder e NÃO chama RPC; false = renderiza dados reais
VITE_CALLS_UNDER_DEV=true
 
# Google Chat (Netlify Functions)
# Configure no provedor (Netlify/GitHub). Não comitar valor real.
GOOGLE_CHAT_WEBHOOK_URL=

# Slack Notifications (Netlify Functions)
# Configure no provedor (Netlify/GitHub). Não comitar valor real.
SLACK_WEBHOOK_URL=